<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_height="wrap_content" android:layout_width="wrap_content">
    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/layoutImage" android:layout_marginRight="10dp">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageViewProfile"
                android:scaleType="fitCenter"/>
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_toRightOf="@+id/layoutImage">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="250dp"
                android:layout_height="90dp">

            <TextView
                    android:id="@+id/txtName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:text="Sample Name"/>

            <TextView
                    android:id="@+id/txtAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:text="Lorem ipsum address is a long message."/>

            <TextView
                    android:id="@+id/txtDateTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:text="3:22 pm"/>

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>


