<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".ActivityMain">

    <include layout="@layout/default_toolbar" android:id="@+id/my_toolbar"/>

    <android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                  xmlns:tools="http://schemas.android.com/tools"
                                                  android:id="@+id/swipeRefresh"
                                                  android:layout_width="wrap_content"
                                                  android:layout_height="wrap_content"
                                                  android:layout_below="@+id/my_toolbar"
                                                  android:layout_alignParentLeft="true"
                                                  android:layout_alignParentStart="true" android:visibility="visible"
                                                  android:layout_above="@+id/linearLayout">

        <ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/listFriends"  />

    </android.support.v4.widget.SwipeRefreshLayout>



    <RelativeLayout android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:id="@+id/layoutEmptyFriendFragment"
                    android:visibility="gone" android:layout_above="@+id/linearLayout"
                    android:layout_marginBottom="50dp"
                    android:padding="10dp" android:layout_marginLeft="20dp" android:layout_marginRight="20dp"
                    android:background="@drawable/empty_friend_bg">


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/suggest_share_key_msg"
                android:id="@+id/textView2" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
                android:gravity="center_horizontal" android:textColor="#000000"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_share_key_text"
                android:id="@+id/btnShareKey"
                android:layout_below="@+id/textView2" android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"/>
    </RelativeLayout>


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true" android:layout_alignParentStart="false"
            android:weightSum="2" android:background="?colorPrimary" android:id="@+id/linearLayout"
            android:baselineAligned="false">

        <fragment
                android:name="com.ffinder.android.FragmentNextAdsCd"
                android:id="@+id/nextAdsCdFragment"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent" android:gravity="center_vertical"/>

    </LinearLayout>


</RelativeLayout>
