<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".ActivityMain">

    <include layout="@layout/default_toolbar" android:id="@+id/my_toolbar"/>

    <android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                  xmlns:tools="http://schemas.android.com/tools"
                                                  android:id="@+id/swipeRefresh"
                                                  android:layout_width="wrap_content"
                                                  android:layout_height="wrap_content"
                                                  android:layout_below="@+id/my_toolbar"
                                                  android:layout_alignParentLeft="true"
                                                  android:layout_alignParentStart="true" android:layout_above="@+id/linearLayout">

        <ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/listFriends"  />

    </android.support.v4.widget.SwipeRefreshLayout>


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true" android:layout_alignParentStart="false"
            android:weightSum="2" android:background="?colorPrimary" android:id="@+id/linearLayout">

        <fragment
                android:name="com.ffinder.android.FragmentNextAdsCd"
                android:id="@+id/nextAdsFragment"
                android:layout_weight="0"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

        <fragment
                android:name="com.ffinder.android.FragmentIdentity"
                android:id="@+id/identityFragment"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>


    </LinearLayout>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_below="@+id/my_toolbar"
            android:layout_centerInParent="true" android:gravity="center" android:id="@+id/layoutEmptyFriendFragment"
            android:visibility="gone">

        <fragment
                android:name="com.ffinder.android.FragmentEmptyFriend"
                android:id="@+id/emptyFriendFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </RelativeLayout>


</RelativeLayout>
