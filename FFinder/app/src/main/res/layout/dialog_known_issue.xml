<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:padding="0dp">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/layoutFragment">
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layoutFragment" android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ok"
                android:id="@+id/btnOk" android:layout_centerHorizontal="true"
                android:layout_below="@+id/checkBoxDontRemind"/>
        <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/don_remind_me_again"
                android:id="@+id/checkBoxDontRemind" android:layout_alignParentBottom="false"
                android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</RelativeLayout>