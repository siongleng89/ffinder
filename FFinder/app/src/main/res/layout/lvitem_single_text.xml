<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" style="@style/FFListViewItemStyle">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medium Text"
            android:id="@+id/textView" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:textColor="@drawable/listview_text" android:textSize="16sp"
            android:layout_centerVertical="true"/>
    <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton" android:layout_centerVertical="true"
            android:layout_alignParentRight="true" android:checked="false" android:visibility="gone"
            android:focusable="false" android:clickable="false"/>

</RelativeLayout>