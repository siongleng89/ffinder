<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/txtPartOne" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/txtPartTwo" android:layout_below="@+id/txtPartOne" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_marginTop="15dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/txtPartThree" android:layout_below="@+id/txtPartTwo" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_marginTop="15dp"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/txtPartFour"
              android:layout_below="@+id/txtPartThree" android:layout_alignParentLeft="true"
              android:layout_alignParentStart="true" android:layout_marginTop="15dp"/>
</RelativeLayout>