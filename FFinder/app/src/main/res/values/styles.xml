<resources>

    <!-- Base application theme. -->
    <style name="FFAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- CustomView your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#668e57</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="splashScreenTheme" parent="FFAppTheme">
        <item name="android:windowBackground">@drawable/splash_image</item>
    </style>

    <style name="FFListViewStyle">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:divider">@drawable/horizontal_green_line</item>
    </style>

    <style name="FFListViewItemStyle">
        <item name="android:background">@drawable/listview_bg</item>
        <item name="android:padding">20dp</item>
    </style>


</resources>
